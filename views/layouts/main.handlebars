    <script>
        fetch('/random-activity')
            .then(response => response.json())
            .then(activity => {
                document.getElementById('activityImage').innerHTML = `<img src="${activity.imageUrl}" alt="${activity.name}" width="200">`;
                document.getElementById('activityName').innerHTML = `<a href="/activities/${activity._id}">${activity.name}</a>`;
            })
            .catch(error => console.error('Error fetching random activity:', error));
    </script>
</body>
