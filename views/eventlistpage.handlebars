<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events List Page</title>
    <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
    <h1>Events List Page</h1>

    <form id="searchForm" class="search-form">
        <label for="searchInput" class="search-label"></label>
        <input type="text" id="searchInput" name="searchInput" class="search-input" placeholder="Search for events...">
        <button type="submit" class="search-button">Search</button>
    </form>

    <h2>Sort/Filter Options:</h2>
    <form id="sortFilterForm">
        <label for="sortByDate">Sort by Date:</label>
        <select id="sortByDate" name="sortByDate">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </select>

        {{!-- <label for="sortByCreator">Sort by Event Creator:</label>
        <select id="sortByCreator" name="sortByCreator">
            <!-- options for event creators go here -->
        </select> --}}

        <label for="filterByCategory">Filter by Event Category:</label>
        <select id="filterByCategory" name="filterByCategory">
             <option value="Playdate">Playdate</option>
            <option value="Workshop">Workshop</option>
            <option value="Seminar">Seminar</option>
            <option value="Concert">Concert</option>
            <option value="Party">Party</option>
            <option value="Other">Other</option>
        </select>

        <button type="submit">Apply</button>
    </form>
    <form id = eventForm></form>

    <div id="eventsList">
  {{#each allEvents}}
  <div class="event">
    <h3>{{this.eventName}}</h3>
    <p>Date: {{this.eventDate}}</p>
    <p>Time: {{ this.time }}</p>
    <p>Category: {{this.eventType}}</p>
    <p>Description: {{this.eventDescription}}</p>
    <a href="/event/{{this._id}}" class="custom-link">View Details</a>
  </div>
  {{/each}}
    </div>
         <div class="back-link">
    <p><a href="/" class="link link-size">Home</a></p>
    </div>
    {{!-- <p><a href="/" class="link link-size">Home</a></p> --}}
    <script src="/public/js/eventValidation.js"></script>
</body>
</html>
